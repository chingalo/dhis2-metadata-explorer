<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dataSet.pages.DataSetIndicatorInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/dataSetIndicatorInfoToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_uid"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorUid"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_name"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorName"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_description"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorDescription"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_numerator_description"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorNumeratorDescription"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_numerator"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorNumerator"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_denominator_description"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorDenominatorDescription"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="@string/indicator_denominator"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/indicatorDenominator"
                        android:paddingStart="180dp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>